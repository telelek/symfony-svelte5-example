{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "./assets/**/*.ts",
    "./assets/**/*.svelte",
    "./assets/**/*.svelte.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
